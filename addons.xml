<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.huffingtonpost.com"
       version="0.1.1"
       name="Huffington Post Live"
       provider-name="Sergey Galuzin special for Andrex Selivanov">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             provides="video"
             library="default.py">
    <provides>video</provides>
  </extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">HUFFINGTON POST video on-line</summary>
  <summary lang="ru">HUFFINGTON POSTT видео он-лайн</summary>
  <description lang="en">Addon for watching HUFFINGTON POST video from XBMC.</description>
  <description lang="ru">Дополнение для просмотра видео HUFFINGTON POST из XBMC.</description>
  <platform>all</platform>
</extension>
</addon>

<addon id="repository.galserg" name="Sergey Galuzin XBMC Add-ons" version="1.0.1" provider-name="Sergey Galuzin">
	<extension point="xbmc.addon.repository" name="Sergey Galuzin XBMC Add-ons">
		<info compressed="false">https://github.com/galserg/xmbc-plugins/raw/master/addons.xml</info>
		<checksum>https://github.com/galserg/xmbc-plugins/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/galserg/xmbc-plugins/raw/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons from GalSerg's Add-on Repository</summary>
		<description>Plug-ins for XBMC</description>
		<disclaimer>There are add-ons that allow viewing popular IPTV channels in the program XBMC</disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
